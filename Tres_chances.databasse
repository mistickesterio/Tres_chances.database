CREATE DATABASE tres_chances;
USE tres_chances;

-- primeira tabela.
CREATE TABLE Jogador(
id int not null AUTO_INCREMENT primary key,  
nome varchar(255) not null,
pontos longtext not null,
Tempo int not null
);

